---
import Header from "../components/Header.astro";
import Popin from "../components/Popin.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-primaryBg text-primary">
    <Header />
    <Popin />
    <slot />
    <style is:global>
      *,
      *:before,
      *:after {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }

      html {
        font-size: 22px;
      }

      body {
        font-family: "Helvetica", sans-serif;
        height: 100%;
        min-height: 100vh;
      }

      h1,
      h2 {
        font-size: 2.4rem;
        font-weight: 500;
        line-height: 2.7rem;
      }

      p {
        font-size: 1rem;
        line-height: 1.5rem;
        font-weight: 400;
      }

      a {
        text-decoration: none;
      }

      ul {
        list-style: none;
      }

      img {
        width: 100%;
      }

      button {
        @apply bg-secondary inline-block cursor-pointer overflow-hidden text-white px-6 py-3 rounded-full;
      }

      .container {
        @apply p-12 flex flex-col mx-auto overflow-x-hidden;
      }

      @media (max-width: 768px) {
        html {
          font-size: 16px;
        }
        h1,
        h2 {
          font-size: 1.875rem;
          line-height: 2.2rem;
        }
        .container {
          @apply py-8 px-5;
        }
      }
      .center {
        @apply flex items-center justify-center;
      }
    </style>
  </body>
</html>
